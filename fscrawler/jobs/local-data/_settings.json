{
  "name": "local-data",
  "fs": {
    "url": "/data",
    "update_rate": "15m",
    "includes": ["*"],
    "excludes": ["~$*", "*.tmp", "*.swp"],
    "recursive": true,
    "json_support": false,
    "xml_support": false,
    "index_folders": true,
    "add_folders": true,
    "remove_deleted": true
  },
  "elasticsearch": {
    "nodes": [
      {
        "host": "elasticsearch",
        "port": 9200,
        "scheme": "HTTP"
      }
    ],
    "index": "local-files",
    "bulk_size": 100,
    "flush_interval": "5s"
  }
}
